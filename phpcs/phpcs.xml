<?xml version="1.0"?>
<ruleset name="MyProject">
    <description>To php 8.</description>

    <rule ref="PHPCompatibility"/>

    <rule ref="PHPCompatibilityPeclMcrypt"/>
	<rule ref="PHPCompatibility.FunctionNameRestrictions.ReservedFunctionNames.MethodDoubleUnderscore">
        <exclude-pattern>*</exclude-pattern>
    </rule>

    <ini name="memory_limit" value="1024M"/>

    <config name="testVersion" value="8.4"/>

    <arg name="extensions" value="php"/>
    <arg name="report-file" value="PHPCS-report.txt"/>
    <arg name="report" value="code"/>
    <arg value="sp"/>

    <!--exclude-pattern type="relative">^/ebak/*</exclude-pattern-->
    <!--exclude-pattern>*.tpl.php</exclude-pattern-->
</ruleset>